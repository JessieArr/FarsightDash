<UserControl x:Class="FarsightDash.Controls.CreateControlWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FarsightDash.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Label>Select New Control Type</Label>
        <ComboBox Height="20" Margin="0,22,10,258" Name="ControlSelector">
            <ComboBoxItem IsSelected="True">Directory Watcher</ComboBoxItem>
            <ComboBoxItem>File Tail</ComboBoxItem>
        </ComboBox>
        <Button Content="Select Target" Click="SelectTargetClicked" Margin="0,56,10,222" Height="20"></Button>
        <Button Margin="181,268,10,10" Click="OKButtonClicked" Height="20" Width="100">OK</Button>
    </Grid>
</UserControl>

<UserControl x:Class="FarsightDash.CreateControlWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Label Height="25" Margin="0,2,0,278">Select New Control Type</Label>
        <ComboBox Height="25" Margin="0,27,10,253" Name="ControlSelector">
        </ComboBox>
        <Label Margin="0,47,215,228" Height="25">Control Name:</Label>
        <TextBox Margin="90,52,10,228" Height="25" x:Name="ControlName"></TextBox>
        <Button Content="Select Target" Click="SelectTargetClicked" Margin="0,77,10,203" Height="20"></Button>
        <Button Margin="10,270,190,10" Click="OKButtonClicked" Height="20" Width="100">OK</Button>
    </Grid>
</UserControl>
